{
	"name": "ext_poc",
	"description": "VSCode extension POC",
	"version": "0.0.1",
	"publisher": "slowgen",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SlowGen/ext_poc"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"extensionKind": [
		"workspace"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
	],
	"main": "./out/extension.js",
	"files": [
		"out",
		"build/web"
	],
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ext-poc-sidebar",
					"title": "Flutter POC",
					"icon": "$(flutter)"
				}
			]
		},
		"views": {
			"ext-poc-sidebar": [
				{
					"type": "webview",
					"icon": "web/icons/Icon-192.png",
					"id": "extPoc.counter",
					"name": "Flutter Counter"
				}
			]

		},
		"commands": [
			{
				"command": "extPoc.addOne",
				"category": "Counter Button",
				"title": "Add One",
				"icon": "$(add)"
			},
			{
				"command": "extPoc.reset",
				"category": "Counter Button",
				"title": "Reset to zero",
				"icon": "$(clear-all)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "extPoc.addOne",
					"group": "navigation",
					"when": "view == extPoc.counter"
				},
				{
					"command": "extPoc.reset",
					"group": "navigation",
					"when": "view == extPoc.counter"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "scripts/compile.sh",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^24.0.14",
		"@types/vscode": "^1.73.0",
		"@vscode/wasm-component-model": "^1.0.2",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}
